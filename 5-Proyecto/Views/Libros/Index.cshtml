@model IEnumerable<_5_Proyecto.Models.Libro>
@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close"  data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h3>
                Lista Libros
            </h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libros">+ AGREGAR LIBROS</a>
        </div>
    </div>

    <div class="row">
        @if (Model.Count() > 0)
        {

            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Titulo)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Descripcion)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.FechaLanzamiento)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Autor)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.precio)</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Titulo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.FechaLanzamiento</td>
                            <td>@item.Autor</td>
                            <td>@item.precio</td>
                            <td>
                                <a asp-area="" asp-controller="Libros" asp-action="Edit" asp-route-id="@item.Id"
                            class="btn btn-primary">Editar</a>
                                <a asp-area="" asp-controller="Libros" asp-action="Delete" asp-route-id="@item.Id"
                            class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        }
        else
        {
            <p>
                No existe Registros
            </p>
        }
    </div>
</div>